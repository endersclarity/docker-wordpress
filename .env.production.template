# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_DATABASE=wordpress_prod
MYSQL_USER=wp_user
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# WordPress Configuration
WORDPRESS_URL=https://yourdomain.com
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=your_secure_admin_password_here
WORDPRESS_ADMIN_EMAIL=your-email@domain.com

# Search API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
REQUIRE_API_KEY=true
VALID_API_KEYS=api_key_1,api_key_2,api_key_3
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_EMAIL=alerts@yourdomain.com

# Performance Configuration
WORDPRESS_MEMORY_LIMIT=256M
MYSQL_INNODB_BUFFER_POOL_SIZE=512M
NGINX_WORKER_PROCESSES=auto